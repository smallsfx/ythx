.tag-container {
    font-size: 12px;
    line-height: 26px;
}

.tag-item {
    margin: 5rpx;
    padding: 5rpx 8rpx;
    border: solid 1rpx #4ad0e3;
    word-wrap: break-word;
    border-radius: 8rpx;
    color: #4ad0e3;
    font-size: 20rpx;
    text-align: center;
}

.round-img {
    width: 60px;
    height: 60px;
    border-radius: 60px;
    margin: 10px;
}

