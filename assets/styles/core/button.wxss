/*按钮样式*/

button,
.aui-btn {
  position: relative;
  /*	display: inline-block;*/
  font-size: 0.7rem;
  font-weight: 400;
  font-family: inherit;
  text-decoration: none;
  text-align: center;
  margin: 0;
  background: #dddddd;
  padding: 0 0.6rem;
  height: 1.5rem;
  line-height: 1.5rem;
  border-radius: 0.2rem;
  white-space: nowrap;
  text-overflow: ellipsis;
  vertical-align: middle;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-user-select: none;
  user-select: none;
}

.aui-btn-text-out {
  margin-top: 15rpx;
  font-size: 12px;
  color: #333;
}

.aui-cell-input-round {
  padding-top: 0;
  padding-bottom: 0;
  border-radius: 5px;
  border: 1rpx solid #d9d9d9;
}

.aui-btn:active {
  color: #212121;
  background-color: #bdbdbd;
}

.aui-btn .aui-badge,
.aui-btn-block .aui-badge {
  margin-left: 0.3rem;
}