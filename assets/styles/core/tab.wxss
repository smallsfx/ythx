/*MENU 菜单项 选中状态*/

.aui-menu-item.aui-active {
  color: #FF8A57;
  border-bottom: 5rpx solid #FF8A57;
}


/*TAB 内容容器样式*/

.aui-menu-content {
  position: absolute;
  left: 0;
  right: 0;
  background-color: #fff;
  font-size: 30rpx;
  color: #545454;
  z-index: 1000;
  display: none;
  overflow: hidden;
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin: 5rpx;
  /* margin-top: 0; */
  /* border-top: none; */
}

.aui-menu-content.aui-active {
  display: block;
}

.aui-menu-content>view {
  width: 45%;
  display: inline-block;
  border: solid 1rpx #ccc;
  margin: 5rpx;
  border-radius: 15rpx;
  line-height: 80rpx;
}

.aui-menu-content>view.aui-active {
  background-color: #FF8A57;
  color: #fff;
