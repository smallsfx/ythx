<import src="/templates/msg-template.wxml" />
<view class="aui-tab">
  <view class="aui-tab-item {{tab==0 ? 'aui-active' : ''}}" data-tab="0" bindtap="swichNav">消息</view>
  <view class="aui-tab-item {{tab==1 ? 'aui-active' : ''}}" data-tab="1" bindtap="swichNav">通讯录</view>
</view>

<swiper current="{{tab}}" class="aui-tab-box" duration="300" style="height:{{winHeight - 43}}px" bindchange="bindChange">
  <!-- 消息界面 -->
  <swiper-item>
    <template is="msg-text" data="{{winHeight: winHeight,messages:messages}}"></template>
  </swiper-item>
  <!-- 通讯录界面 -->
  <swiper-item>
    <template is="msg-contacts" data="{{winHeight: winHeight,contacts:contacts}}"></template>
  </swiper-item>
</swiper>